<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :affiliation_link, class: "form-label" %>
    <%= form.text_field :affiliation_link, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label "Associated diseases :", class: "form-label" %>
    <%= form.collection_check_boxes :disease_ids, Disease.order(:name), :id, :name do |d| %>
      <div class="form-check">
        <%= d.label class: "form-label" %>
        <%= d.check_box class: "form-check-input" %>
      </div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.submit "Add the product", class: "btn btn-primary" %>
  </div>
<% end %>